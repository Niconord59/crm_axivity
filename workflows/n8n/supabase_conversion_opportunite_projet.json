    {
      "parameters": {
        "select": "channel",
        "channelId": {
          "__rl": true,
          "value": "VOTRE_CHANNEL_ID",
          "mode": "id"
        },
        "text": "={{ ':tada: *Nouvelle affaire signée !*\\n\\n' }}",
        "otherOptions": {
          "includeLinkToWorkflow": false,
          "blocks": {
            "block": [
              {
                "type": "header",
                "text": {
                  "type": "plain_text",
                  "text": ":tada: Nouvelle affaire signée !",
                  "emoji": true
                }
              },
              {
                "type": "section",
                "fields": [
                  {
                    "type": "mrkdwn",
                    "text": "*Projet:*\n{{ $json.projet_nom }}"
                  },
                  {
                    "type": "mrkdwn",
                    "text": "*Client:*\n{{ $('Préparer Données Projet').item.json.client_nom }}"
                  }
                ]
              },
              {
                "type": "section",
                "fields": [
                  {
                    "type": "mrkdwn",
                    "text": "*Budget:*\n{{ $('Préparer Données Projet').item.json.budget.toLocaleString('fr-FR') }} €"
                  },
                  {
                    "type": "mrkdwn",
                    "text": "*Date de début:*\n{{ $('Préparer Données Projet').item.json.date_debut }}"
                  }
                ]
              },
              {
                "type": "divider"
              },
              {
                "type": "context",
                "elements": [
                  {
                    "type": "mrkdwn",
                    "text": ":robot_face: Projet créé automatiquement depuis l'opportunité (Supabase)"
                  }
                ]
              },
              {
                "type": "actions",
                "elements": [
                  {
                    "type": "button",
                    "text": {
                      "type": "plain_text",
                      "text": ":eyes: Voir le projet",
                      "emoji": true
                    },
                    "url": "https://crm.axivity.cloud/projets/{{ $json.projet_id }}"
                  }
                ]
              }
            ]
          }
        }
